<lxs>
    <!-- global values -->
    <scene root="shobuRoot" axis_length="5"/>

    <!-- specification of all views -->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="400" angle="40">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <!-- illumination parameters -->
    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.35" g="0.35" b="0.35" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="blackWood" file="scenes/images/blackwood.jpg" />
        <texture id="whiteWood" file="scenes/images/whitewood.jpg" />
        <texture id="rope" file="scenes/images/rope.jpg" />
    </textures>

    <!-- specification of all materials -->
    <materials>
        <material id="defaultMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="rope" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="wood" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="blackPiece" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>

        <material id="whitePiece" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>
    </materials>

    <!-- specification of geometric transformations -->
    <!-- for use in different components -->
    <transformations>
        <transformation id="board-up-left">
            <translate x="-5" y="0" z="-5" />
        </transformation>

        <transformation id="board-down-left">
            <translate x="-5" y="0" z="5" />
        </transformation>

        <transformation id="board-up-right">
            <translate x="5" y="0" z="5" />
        </transformation>

        <transformation id="board-down-right">
            <translate x="5" y="0" z="-5" />
        </transformation>

        <transformation id="rotateBoardRectangle">
            <rotate axis="x" angle="-90" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <!-- specification of all primitives -->
    <primitives>
        <primitive id="boardRectangle">
            <rectangle x1="-4" y1="-4" x2="4" y2="4" />
        </primitive>

        <primitive id="pieceAndRopeSphere">
            <sphere radius="1" slices="16" stacks="16"/>
        </primitive>

        <primitive id="ropeCylinder">
            <cylinder base="1" top="1" height="16" slices="16" stacks="16"/>
        </primitive>
    </primitives>

    <!-- specification of all components: objects  -->
    <!-- composed of primitives and other components -->
    <components>
        <component id="shobuRoot">
            <transformation>
            </transformation>

            <materials>
                <material id="defaultMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="rope" />
                <componentref id="boards" />
                <componentref id="pieces" />
            </children>
        </component>

        <!-- Rope related Components-->
        <component id="rope">
            <transformation>
                <scale x="1" y="0.5" z="0.5"/>
            </transformation>

            <materials>
                <material id="rope" />
            </materials>

            <texture id="rope" length_s="1" length_t="1"/>

            <children>
                <componentref id="ropeBody" />
                <componentref id="ropeEnds" />
            </children>
        </component>

        <component id="ropeBody">
            <transformation>
                <translate x="-8" y="0" z="0" />
                <rotate axis="y" angle="90"/>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="ropeCylinder" />
            </children>
        </component>

        <component id="ropeEnds">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <componentref id="ropeEnd1" />
                <componentref id="ropeEnd2" />
            </children>
        </component>

        <component id="ropeEnd2">
            <transformation>
                <rotate axis="y" angle="180"/>
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="inherit" />

            <children>
                <componentref id="ropeEnd1"/>
            </children>
        </component>

        <component id="ropeEnd1">
            <transformation>
                <translate x="8" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="pieceAndRopeSphere"/>
            </children>
        </component>

        <!-- Boards related Components-->

        <component id="boards">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="none" />

            <children>
                <componentref id="board-up-left"/>
                <componentref id="board-down-left"/>
                <componentref id="board-up-right"/>
                <componentref id="board-down-right"/>
            </children>
        </component>

        <component id="board-up-left">
            <transformation>
                <transformationref id="board-up-left"/>
            </transformation>

            <materials>
                <material id="wood"/>
            </materials>

            <texture id="whiteWood" length_s="8" length_t="8"/>

            <children>
                <componentref id="board"/>
            </children>
        </component>

        <component id="board-down-left">
            <transformation>
                <transformationref id="board-down-left"/>
            </transformation>

            <materials>
                <material id="wood"/>
            </materials>

            <texture id="whiteWood" length_s="8" length_t="8"/>

            <children>
                <componentref id="board"/>
            </children>
        </component>

        <component id="board-up-right">
            <transformation>
                <transformationref id="board-up-right"/>
            </transformation>

            <materials>
                <material id="wood"/>
            </materials>

            <texture id="blackWood" length_s="8" length_t="8"/>

            <children>
                <componentref id="board"/>
            </children>
        </component>

        <component id="board-down-right">
            <transformation>
                <transformationref id="board-down-right"/>
            </transformation>

            <materials>
                <material id="wood"/>
            </materials>

            <texture id="blackWood" length_s="8" length_t="8"/>

            <children>
                <componentref id="board"/>
            </children>
        </component>

        <component id="board">
            <transformation>
                <transformationref id="rotateBoardRectangle"/>
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="boardRectangle"/>
            </children>
        </component>

        <!-- Pieces related Components-->
        <component id="pieces">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="none" />

            <children>
                <componentref id=""/>
            </children>
        </component>


    </components>
</lxs>